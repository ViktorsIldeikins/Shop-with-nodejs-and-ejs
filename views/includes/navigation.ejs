<header class="main-header">
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class ="<%= page === 'index' ? 'active' : ''%>" href="/">Shop</a>
            </li>
            <li class="main-header__item">
                <a class ="<%= page === 'product-list' ? 'active' : ''%>" href="/products">Products</a>
            </li>
            <% if (loggedIn) { %>
                <li class="main-header__item">
                    <a class ="<%= page === 'checkout' ? 'active' : ''%>" href="/cart">Cart</a>
                </li>
                <li class="main-header__item">
                    <a class ="<%= page === 'add-product' ? 'active' : ''%>" href="/admin/add-product">Add Product</a>
                </li>
                <li class="main-header__item">
                    <a class ="<%= page === 'admin-product-list' ? 'active' : ''%>" href="/admin/product-list">Admin Product List</a>
                </li>
                <li class="main-header__item">
                    <a class ="<%= page === 'orders' ? 'active' : ''%>" href="/orders">Orders</a>
                </li>
            <% } %>
        </ul>
        <ul class="main-header__item-list">
            <% if (!loggedIn) { %>
                <li class="main-header__item">
                    <a class="<%= page === '/login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= page === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>